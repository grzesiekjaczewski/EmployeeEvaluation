@model EmployeeEvaluation.Models.TeamStructure

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Team</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TeamExtended.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TeamExtended.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TeamExtended.ManagerName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TeamExtended.ManagerName)
        </dd>

    </dl>
</div>

<table class="table">
    <tr>
        <th>
            Imię
        </th>
        <th>
            Nazwisko
        </th>
        <th>
            Stanowisko
        </th>
    </tr>

    @foreach (var item in Model.TeamMembers)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PositionName)
            </td>
        </tr>
    }
</table>



<p>
    @Html.ActionLink("Back to List", "Index")
</p>
