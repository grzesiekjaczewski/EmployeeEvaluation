@model EmployeeEvaluation.Models.Survey

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ankieta oceny okrsowej pracownika</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <input type="hidden" id="page" name="page" value="1">
    <input type="hidden" id="section" name="section" value="0">
    <input type="hidden" id="question" name="question" value="0">
    <input type="hidden" id="sectionCount" name="sectionCount" value="@ViewBag.SurveySections">
    <input type="hidden" id="questionCount" name="questionCount" value="@ViewBag.SurveyQuestions">
    <input type="hidden" id="sectionId" name="sectionId" value="0">
    <input type="hidden" id="questionId" name="questionId" value="0">
    <input type="hidden" id="questionType" name="questionType" value="0">
    <input type="hidden" id="sectionEmployeeScore" name="sectionEmployeeScore" value="0">


    <div class="form-group" id="userInfo">

        <div class="col-md-10">
            <h3>Pracownik: @ViewBag.UserInfo</h3>
        </div>
        <div class="col-md-10">
            <h4>Ankieta: @Model.Name</h4>
        </div>
        <div class="col-md-10">
            <h4>Termin wypęłninia: @Model.SurveyDadline.ToShortDateString()</h4>
        </div>
    </div>
    <div class="form-group">
        <h4 id="sectionTitle"></h4>
        <p id="sectionName"></p>
    </div>

    <div class="form-group">
        <h4 id="questionName"></h4>
        <p id="questionDescription"></p>
        <p hidden="hidden" id="sectionEmployeeScore0">
            <input type="radio" id="sectionEmployeeScore1" name="employeeScore" value="1">Zdecydowanie poniżej oczekiwań<br />
            <input type="radio" id="sectionEmployeeScore2" name="employeeScore" value="2">Poniżej oczekiwań<br />
            <input type="radio" id="sectionEmployeeScore3" name="employeeScore" value="3">Zadowalająca<br />
            <input type="radio" id="sectionEmployeeScore4" name="employeeScore" value="4">Przewyższa oczekiwania<br />
            <input type="radio" id="sectionEmployeeScore5" name="employeeScore" value="5">Zdecydowanie powyżej oczekiwań
        </p>
    </div>

    <div class="form-group" id="questionEmployeeComment">
    </div>

    <div class="form-group" id="sectionEmployeeSummary">
    </div>
    <div class="form-group" id="sectionEmployeeScore">
    </div>

    <div class="form-group">
        <div id="prevDiv" hidden="hidden" class="col-md-1">
            <a href="#" id="prevBtn" onclick="actionPrev('@Model.Id','/EmpEvaluations/PrevQuestion')" class="btn btn-default"> Poprzednie pytanie </a>
        </div>
        <div class="col-md-8">
            <a href="#" id="startBtn" onclick="actionNext('@Model.Id','/EmpEvaluations/NextQuestion')" class="btn btn-default"> Rozpocznij </a>
        </div>
        <div id="nextDiv" hidden="hidden" class="col-md-1">
            <a href="#" id="nextBtn" onclick="actionNext('@Model.Id','/EmpEvaluations/NextQuestion')" class="btn btn-default"> Następne pytanie </a>
        </div>
    </div>
</div>
}

<div class="form-group">
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/Scripts/mySurvey.js")
}